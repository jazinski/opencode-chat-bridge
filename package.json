{
  "name": "opencode-chat-bridge",
  "version": "1.0.0",
  "description": "Agata - Your AI coding assistant via Telegram, Slack, and Discord",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "opencode",
    "telegram",
    "slack",
    "discord",
    "ai",
    "coding-agent",
    "chat-bridge"
  ],
  "author": "cjazinski",
  "license": "MIT",
  "dependencies": {
    "@opencode-ai/sdk": "^1.0.203",
    "@slack/bolt": "^3.22.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/pg": "^8.16.0",
    "axios": "^1.13.4",
    "better-sqlite3": "^12.6.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "node-pty": "^1.0.0",
    "opencode-skills": "^1.0.0",
    "pg": "^8.16.3",
    "strip-ansi": "^7.1.0",
    "telegraf": "^4.16.3",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.4.6",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
